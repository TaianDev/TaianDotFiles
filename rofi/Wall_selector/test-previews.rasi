/*******************************************************************************
 * TEMA DE PRUEBA PARA VISTAS PREVIAS DE IMÁGENES - MODO CUADRÍCULA COMPACTA
 * Basado en "rounded-blue-dark"
 *
 * Configuración optimizada para selector de wallpapers
 *******************************************************************************/
/* ==============================================================================
 * VARIABLES DE COLOR (De rounded-blue-dark.rasi)
 * ============================================================================== */
* {
    bg0:   #080809 ;
    bg1:   #2A2A2A;
    bg2:   #3D3D3D80;
    bg3:   #0099CC ;
    fg0:   #E6E6E6;
    fg1:   #FFFFFF;
    fg2:   #969696;
    fg3:   #3D3D3D;
    bb:    rgba ( 12, 12, 12, 50 % );
    se:    rgba ( 12, 12, 12, 50 % );
    sel:   rgba ( 0, 0, 0, 90 % );
    bor:   rgba ( 255, 255, 255, 12 % );
    font:             "Roboto 12";
    background-color: transparent;
    text-color:       @fg0;
    margin:           0px;
    padding:          0px;
    spacing:          0px;
}
/* ==============================================================================
 * DISEÑO GENERAL (De rounded-common.rasi)
 * ============================================================================== */
window {
    location:         center;
    width:            650;
    height:           350;      
    border:           3px;
    border-radius:    20px;
    border-color:     transparent;
    background-color: @bb;
}
mainbox {
    padding:          15px;
    text-color:       @fg0;
}
inputbar {
    background-color: @se;
    border-color:     @bg2;
    border:           2px;
    border-radius:    25px;
    padding:          4px 15px 6px 8px;
    spacing:          8px;
    children:         [ prompt, entry ];
}
prompt {
    text-color: @fg0;
}
entry {
    placeholder:       "Search";
    placeholder-color: @fg0;
}
message {
    margin:           8px 0 0;
    border-radius:    25px;
    border-color:     @bg2;
    background-color: @bg2;
}
textbox {
    padding:          6px 18px;
}
/* ==============================================================================
 * VISTA DE LISTA EN FORMATO CUADRÍCULA COMPACTA
 * ============================================================================== */
listview {
    background-color: transparent;
    margin:           10px 0 0;
    lines:            2;        
    columns:          3;        
    fixed-height:     false;    
    fixed-columns:    true;     
    spacing:          8px;
    flow:             horizontal; 
}
element {
    padding:          8px;
    spacing:          5px;
    border-radius:    12px;
    orientation:      vertical;
    
    children:         [ element-icon, element-text ];
}
element normal active {
    text-color: @fg0;
}
element alternate active {
    text-color: @fg0;
}
element selected normal, element selected active {
    background-color: @bor;
}
/* --- Definiciones de los hijos del elemento --- */
element-icon {
    size:             90px;
    horizontal-align: 0.5;
    vertical-align:   0.5;
    background-color: transparent;
    cursor:           inherit;
}
element-text {
    text-color:       @fg0;
    horizontal-align: 0.5;
    vertical-align:   0.5;
    cursor:           inherit;
    font:             "Roboto 9";
}
