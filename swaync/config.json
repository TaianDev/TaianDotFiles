{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "left",
  "positionY": "top",
  "layer": "overlay",
  "layer-shell": true,
  "cssPriority": "application",
  "control-center-layer": "top",
  "control-center-margin-top": 9,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 9,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-icon-size": 50,
  "notification-body-image-height": 200,
  "notification-body-image-width": 200,
  "fit-to-screen": false,
  "timeout": 6,
  "timeout-low": 5,
  "timeout-critical": 0,
  "relative-timestamps": true,
  "control-center-width": 400,
  "control-center-height": 606,
  "notification-window-width": 400,
  "notification-window-hight": 400,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    },
    "example-action-script": {
      "exec": "echo 'Do something actionable!'",
      "urgency": "Normal",
      "run-on": "action"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    },
  "kitty-muted": {
    "state": "muted",
    "app-name": "starship"
  }
  },
  "widgets": [
    "inhibitors",
    "title",
    "dnd",
    "notifications",
    "buttons-grid"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "title": {
      "text": "Notificaciones",
      "clear-all-button": true,
      "button-text": "Borar todo"
    },
    "dnd": {
      "text": "No molestar :)"
    },
    "label": {
      "max-lines": 5,
      "text": "Label Text"
    },
    "mpris": {
      "image-size": 50,
      "image-radius": 12
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
          "update_command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
        },
        {
         "label": "",
         "type": "toggle",
         "active": true,
         "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && rfkill unblock bluetooth || rfkill block bluetooth'",
         "update_command": "sh -c '[[ $(rfkill list bluetooth | grep -c \"Soft blocked: no\") -eq 1 ]] && echo true || echo false'"
       },
       {
         "label": "󰃞",
        "type": "toggle",
        "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && hyprsunset --temperature 4000 || pkill hyprsunset'",
        "update_command": "sh -c '[[ $(pgrep hyprsunset) ]] && echo true || echo false'"
       },
       {
        "label": "",
        "type": "toggle",
        "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && pactl set-source-mute @DEFAULT_SOURCE@ 1 || pactl set-source-mute @DEFAULT_SOURCE@ 0'",
        "update_command": "sh -c '[[ $(pactl get-source-mute @DEFAULT_SOURCE@) == *yes* ]] && echo true || echo false'"
       }
      ]
    }
  }
}
